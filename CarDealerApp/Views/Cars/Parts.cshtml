@model IEnumerable<CarDealer.Models.ViewModels.CarsWithPartsVM>

@{
    ViewBag.Title = "Parts";
}

<h2>Parts</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TravelledDistance)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Make)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TravelledDistance)
        </td>
        <td>
            <table class="table">
                <tr>
                    <th>
                       Name
                    </th>
                    <th>
                      Price
                    </th>
                   
                    <th></th>
                </tr>

                @foreach (var part in item.Parts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => part.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => part.Price)
                        </td>

                    </tr>
                }

            </table>

        </td>
      
    </tr>
}

</table>
